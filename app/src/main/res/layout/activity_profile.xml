<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Profile">

    <LinearLayout
        android:id="@+id/LayoutProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImage"
            android:layout_gravity="center"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/dp"
            app:civ_border_color="#FFF"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/name"
            android:layout_marginTop="5dp"
            android:text="John Smith"
            android:textColor="#1B1A1A"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="jsmith@gmail.com"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:id="@+id/view1"
        android:layout_height="1dp"
        android:background="#A9A9A9"></View>
    <LinearLayout
        android:id="@+id/LayoutAddService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:tint="#696969"
            android:src="@drawable/ic_add_box_black_24dp">

        </ImageView>
        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="#4D4848"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:text="Add New Service"
            android:textSize="17dp"></TextView>
       <ImageView
           android:layout_width="30dp"
           android:layout_height="20dp"
           android:tint="#696969"
           android:layout_gravity="center_vertical"
           android:src="@drawable/ic_keyboard_arrow_right_black_24dp"></ImageView>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:id="@+id/view2"
        android:layout_height="1dp"
        android:background="#A9A9A9"></View>
    <LinearLayout
        android:id="@+id/LayoutViewServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:tint="#696969"
            android:src="@drawable/ic_view_list_black_24dp">

        </ImageView>
        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="#4D4848"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:text="View All Services"
            android:textSize="17dp"></TextView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:tint="#696969"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"></ImageView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A9A9A9"></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/message"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:text="Your account is under review. We will contact you soon"
        android:textColor="#1B1A1A"
        android:textStyle="bold"></TextView>
</LinearLayout>